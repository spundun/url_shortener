<%= form_for @short, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="form-group">
    <%= f.label :url, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :url, :class => 'form-control' %>
    </div>
  </div>

  
  <%= f.submit nil, :class => 'btn btn-primary' %>
 
<% end %>
